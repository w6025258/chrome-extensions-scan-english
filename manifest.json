{
  "manifest_version": 3,
  "name": "选词字数统计",
  "version": "1.0.0",
  "description": "右键点击选中的文字，立即查看字数和字符数统计。",
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}