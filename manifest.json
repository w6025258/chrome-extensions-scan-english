{
  "manifest_version": 3,
  "name": "选词字数统计 & 英语生词本",
  "version": "1.1.0",
  "description": "右键统计选中文字数，或点击图标分析页面英语词频，辅助单词学习。",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "分析页面单词"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}